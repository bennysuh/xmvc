package views{	import components.Button;	import controllers.Controller;	import data.ConnectionData;	import data.DataObject;	import models.MobileModel;	import models.Model;	public class ConnectionView extends View	{		private var childView:FormView = null;		public function ConnectionView(amodel:Model, acontroller:Controller)		{			trace("ConnectionView.View");			super(amodel, acontroller);			refreshView();		}		private function clearView():void		{			if (childView != null)			{				removeChild(childView);				childView.destroyView();				childView = null;			}		}		public override function refreshView():void		{			trace("ConnectionView.refreshView");			clearView();			childView = new FormView(model, controller);			MobileModel(model).formData = MobileModel(model).connection as DataObject;			childView.buildForm(null, null, "Connection"); 			addChild(childView);		}		public override function destroyView():void		{			clearView();		}	}}