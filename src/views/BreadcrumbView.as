package views{	import components.Button;	import controllers.Controller;	import flash.display.MovieClip;	import flash.display.Sprite;	import models.MobileModel;	import models.Model;	public class BreadcrumbView extends View	{		private var base:Sprite = null;		private var _upColor:uint = 0x000000;			public function BreadcrumbView(amodel:Model, acontroller:Controller)		{			trace("BreadcrumbView.View");			super(amodel, acontroller);			refreshView();		}		private function clearView():void		{			if (base != null)			{				while (base.numChildren > 0)				{					var myButton:Button = base.removeChildAt(0) as Button;					if (myButton != null)					{						myButton.destroyView();						myButton = null;					}				}				removeChild(base);				base = null;			}		}		public override function refreshView():void		{			clearView();			base = new Sprite();			addChild(base);			base.graphics.beginFill(_upColor, 1);			base.graphics.drawRect(0,0, _stage.stageWidth, _stage.stageHeight / 10);			base.graphics.endFill();			base.y = (_stage.stageHeight / 10) * 9;			var myItems:Array = MobileModel(model).getViewIcons();			if (myItems.length < 1)			{				base.graphics.clear();			}else{				var myItemWidth:Number = _stage.stageWidth / myItems.length;				for (var i:int = 0; i < myItems.length; i++)				{					var anIcon:MovieClip = myItems[i];					var _aButton:Button = new Button(myItemWidth,_stage.stageHeight/10, "",anIcon,  MobileModel(model).popView);					base.addChild(_aButton);					_aButton.x = myItemWidth * i;				}				}		}		public override function destroyView():void		{			clearView();			super.destroyView();		}	}}